<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fingerprint"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"

        android:layout_gravity="top"
        android:src="@drawable/bbar"
        android:background="@null"
        android:paddingRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo6"
        android:background="@null"
        android:paddingLeft="40px"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:src="@drawable/settings_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="50px"
        android:paddingTop="90px"
        android:layout_below="@+id/logo"
        android:paddingBottom="35px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/relativeLayout"
        android:layout_alignRight="@+id/option_settings"
        android:layout_alignEnd="@+id/option_settings"
        android:layout_below="@+id/advanced_settings_bigtext">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/security_btn"

            android:background="@null"
            android:paddingTop="30dp"
            android:paddingLeft="52dp"
            android:src="@drawable/security_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifications_btn"
            android:layout_below="@+id/security_btn"
            android:background="@null"
            android:paddingLeft="57dp"
            android:paddingTop="100px"
            android:src="@drawable/notifications_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/themes_btn"
            android:layout_below="@+id/notifications_btn"
            android:layout_alignRight="@+id/notifications_btn"
            android:layout_alignEnd="@+id/notifications_btn"
            android:src="@drawable/themes_icon"
            android:background="@null"
            android:paddingRight="7px"
            android:paddingTop="100px"
            android:paddingLeft="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intruders_btn"
            android:layout_below="@+id/themes_btn"
            android:layout_alignRight="@+id/themes_btn"
            android:layout_alignEnd="@+id/themes_btn"
            android:src="@drawable/intruders_icon2"
            android:background="@null"
            android:paddingRight="10px"
            android:paddingTop="110px"
            android:paddingLeft="57dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Security"
            android:id="@+id/security_text"
            android:layout_above="@+id/notifications_btn"
            android:layout_toRightOf="@+id/notifications_btn"
            android:layout_toEndOf="@+id/notifications_btn"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:textSize="12pt"
            android:paddingBottom="5dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notifications"
            android:id="@+id/notifications_text"
            android:layout_above="@+id/themes_btn"
            android:layout_alignLeft="@+id/security_text"
            android:layout_alignStart="@+id/security_text"
            android:textSize="12pt"
            android:paddingBottom="5dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Themes"
            android:id="@+id/themes_text"
            android:layout_above="@+id/intruders_btn"
            android:layout_alignLeft="@+id/notifications_text"
            android:layout_alignStart="@+id/notifications_text"
            android:textSize="12pt"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Intruders"
            android:id="@+id/intruders_text"
            android:layout_alignBottom="@+id/intruders_btn"
            android:layout_alignLeft="@+id/themes_text"
            android:layout_alignStart="@+id/themes_text"
            android:textSize="12pt"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Settings..."
            android:textAllCaps="false"
            android:id="@+id/advancedsettings_btn"
            android:background="@null"
            android:textColor="#AFABAB"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="8pt"
            android:layout_marginBottom="62dp"
            android:paddingTop="70px"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/themes_btn"
            android:layout_alignStart="@+id/themes_btn" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/separater"
            android:src="@drawable/separate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null" />

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option_settings"
        android:src="@drawable/opt_settingsf"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="6dp"
        android:paddingTop="15dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/advanced_settings_bigtext"
        android:textColor="#D9D9D9"
        android:textSize="15pt"
        android:paddingLeft="9dp"
        android:paddingBottom="12dp"
        android:layout_below="@+id/logo"
        android:layout_toRightOf="@+id/settings"
        android:layout_toEndOf="@+id/settings"
        android:paddingTop="14dp" />

</RelativeLayout>

